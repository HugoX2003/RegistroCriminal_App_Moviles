<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_fragmento"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<androidx.fragment.app.FragmentContainerView
android:id="@+id/contenedor_lista"
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="1"
android:name="com.dapm.registrocriminal.presentacion.ListaCrimenesFragment" />

<androidx.fragment.app.FragmentContainerView
android:id="@+id/contenedor_detalle"
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="2"
android:name="com.dapm.registrocriminal.presentacion.CrimenFragment" />
</LinearLayout>